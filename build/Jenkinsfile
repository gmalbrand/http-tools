pipeline {
  agent {label 'go'}

  environment {
    REPOSITORY='gmalbrand/http-tools'
  }

  stages {
    stage('Setup') {
      steps 'make clean dep'
    }
    stage('Build') {
      steps {
        sh 'make build'
      }
    }
    stage('Test') {
      steps {
        sh 'make test'
      }
    }
  }

  post {
      always{
          emailext body: '$DEFAULT_CONTENT', subject: '[Jenkins] $DEFAULT_SUBJECT', to: '$DEFAULT_RECIPIENTS'
      }
  }
}
